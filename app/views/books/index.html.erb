<div class="container">
  <div class="header">
    <h1>My Books</h1>
    <div class="user-info">
      <p>Welcome, <%= current_user.email %>!</p>
      <%= link_to "Profile", edit_user_registration_path, class: "btn btn-secondary" %>
      <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete }, class: "btn btn-outline-secondary" %>
    </div>
  </div>

  <div class="actions">
    <%= form_with url: create_from_isbn_books_path, method: :post, local: true, class: "isbn-form", data: { turbo: false } do |form| %>
      <%= form.label :isbn, "Add book by ISBN or Title:" %>
      <%= form.text_field :isbn, placeholder: "Enter ISBN or book title" %>
      <%= form.submit "Add Book from Google Books", class: "btn btn-primary" %>
    <% end %>
    
    <%= link_to "Add New Book Manually", new_book_path, class: "btn btn-secondary" %>
  </div>

<!-- Bootstrap Tabs for Reading Status -->
<ul class="nav nav-tabs" id="readingStatusTabs" role="tablist">
  <li class="nav-item" role="presentation">
    <button class="nav-link active" id="all-tab" data-bs-toggle="tab" data-bs-target="#all-books" type="button" role="tab">
      すべて (<%= @books.count %>)
    </button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="wish-tab" data-bs-toggle="tab" data-bs-target="#wish-books" type="button" role="tab">
      読みたい (<%= @books.wish.count %>)
    </button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="tsundoku-tab" data-bs-toggle="tab" data-bs-target="#tsundoku-books" type="button" role="tab">
      積読 (<%= @books.tsundoku.count %>)
    </button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="completed-tab" data-bs-toggle="tab" data-bs-target="#completed-books" type="button" role="tab">
      読了 (<%= @books.completed.count %>)
    </button>
  </li>
</ul>

<div class="tab-content" id="readingStatusTabContent">
  <!-- All Books Tab -->
  <div class="tab-pane fade show active" id="all-books" role="tabpanel">
    <%= render 'books_list', books: @books %>
  </div>
  
  <!-- Wish Books Tab -->
  <div class="tab-pane fade" id="wish-books" role="tabpanel">
    <%= render 'books_list', books: @books.wish %>
  </div>
  
  <!-- Tsundoku Books Tab -->
  <div class="tab-pane fade" id="tsundoku-books" role="tabpanel">
    <%= render 'books_list', books: @books.tsundoku %>
  </div>
  
  <!-- Completed Books Tab -->
  <div class="tab-pane fade" id="completed-books" role="tabpanel">
    <%= render 'books_list', books: @books.completed %>
  </div>
</div>

<script>
// ISBN検索のテスト用JavaScript
function testISBNSearch() {
  const isbn = prompt("Enter ISBN to search:");
  if (!isbn) return;
  
  fetch(`/books/search_by_isbn?isbn=${isbn}`)
    .then(response => response.json())
    .then(data => {
      console.log('Search results:', data);
      alert('Check browser console for results');
    })
    .catch(error => {
      console.error('Error:', error);
      alert('Search failed');
    });
}
</script>

<button onclick="testISBNSearch()">Test ISBN Search (Console)</button>
</div>


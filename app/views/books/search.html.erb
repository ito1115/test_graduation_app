<script src="https://cdn.jsdelivr.net/npm/@ericblade/quagga2/dist/quagga.min.js"></script>

<script>
document.addEventListener('DOMContentLoaded', function() {
  console.log('DOMContentLoaded - Barcode scanner script loaded');

  const barcodeScanBtn = document.getElementById('barcodeScanBtn');
  const barcodeModal = document.getElementById('barcodeModal');
  const closeBarcodeModal = document.getElementById('closeBarcodeModal');
  const cancelBarcodeScan = document.getElementById('cancelBarcodeScan');
  const searchInput = document.getElementById('search-input');
  const barcodeResult = document.getElementById('barcode-result');
  const detectedIsbn = document.getElementById('detected-isbn');
  const barcodeError = document.getElementById('barcode-error');
  const barcodeScanner = document.getElementById('barcode-scanner');

  console.log('Elements found:', {
    barcodeScanBtn: !!barcodeScanBtn,
    barcodeModal: !!barcodeModal,
    closeBarcodeModal: !!closeBarcodeModal,
    cancelBarcodeScan: !!cancelBarcodeScan,
    searchInput: !!searchInput,
    barcodeResult: !!barcodeResult,
    detectedIsbn: !!detectedIsbn,
    barcodeError: !!barcodeError,
    barcodeScanner: !!barcodeScanner
  });

  if (!barcodeScanBtn) {
    console.error('Barcode scan button not found!');
    return;
  }

  let isScanning = false;

  // ãƒãƒ¼ã‚³ãƒ¼ãƒ‰ã‚¹ã‚­ãƒ£ãƒ³ãƒœã‚¿ãƒ³ã®ã‚¯ãƒªãƒƒã‚¯
  barcodeScanBtn.addEventListener('click', function(e) {
    console.log('Barcode button clicked!');
    e.preventDefault();
    openBarcodeScanner();
  });

  // ãƒ¢ãƒ¼ãƒ€ãƒ«ã‚’é–‰ã˜ã‚‹
  closeBarcodeModal.addEventListener('click', closeBarcodeScanner);
  cancelBarcodeScan.addEventListener('click', closeBarcodeScanner);

  // ãƒ¢ãƒ¼ãƒ€ãƒ«èƒŒæ™¯ã‚’ã‚¯ãƒªãƒƒã‚¯ã—ã¦é–‰ã˜ã‚‹
  barcodeModal.addEventListener('click', function(e) {
    if (e.target === barcodeModal) {
      closeBarcodeScanner();
    }
  });

  function openBarcodeScanner() {
    console.log('Opening barcode scanner...');
    barcodeModal.style.display = 'flex';
    barcodeResult.style.display = 'none';
    barcodeError.style.display = 'none';
    startScanning();
  }

  function closeBarcodeScanner() {
    barcodeModal.style.display = 'none';
    stopScanning();
  }

  function startScanning() {
    if (isScanning) return;
    isScanning = true;

    // QuaggaåˆæœŸåŒ–
    Quagga.init({
      inputStream: {
        name: "Live",
        type: "LiveStream",
        target: barcodeScanner,
        constraints: {
          width: 640,
          height: 480,
          facingMode: "environment" // èƒŒé¢ã‚«ãƒ¡ãƒ©ã‚’ä½¿ç”¨
        }
      },
      decoder: {
        readers: [
          "ean_reader",      // EAN-13 (ISBNã§ä½¿ç”¨)
          "ean_8_reader",    // EAN-8
          "upc_reader",      // UPC
          "upc_e_reader"     // UPC-E
        ]
      },
      locate: true,
      locator: {
        patchSize: "medium",
        halfSample: true
      },
      numOfWorkers: navigator.hardwareConcurrency || 4,
      frequency: 10
    }, function(err) {
      if (err) {
        console.error('Quagga initialization error:', err);
        showError('ã‚«ãƒ¡ãƒ©ã®èµ·å‹•ã«å¤±æ•—ã—ã¾ã—ãŸã€‚ã‚«ãƒ¡ãƒ©ã¸ã®ã‚¢ã‚¯ã‚»ã‚¹ã‚’è¨±å¯ã—ã¦ãã ã•ã„ã€‚');
        return;
      }
      console.log("Quagga initialization finished. Ready to start");
      Quagga.start();
    });

    // ãƒãƒ¼ã‚³ãƒ¼ãƒ‰æ¤œå‡ºã‚¤ãƒ™ãƒ³ãƒˆ
    Quagga.onDetected(onBarcodeDetected);
  }

  function stopScanning() {
    if (!isScanning) return;
    isScanning = false;

    if (Quagga) {
      Quagga.stop();
      Quagga.offDetected(onBarcodeDetected);
    }
  }

  function onBarcodeDetected(result) {
    const code = result.codeResult.code;
    console.log('Barcode detected:', code);

    // ISBNã¨ã—ã¦æœ‰åŠ¹ã‹ç°¡æ˜“ãƒã‚§ãƒƒã‚¯ï¼ˆ13æ¡ã¾ãŸã¯10æ¡ï¼‰
    if (code && (code.length === 13 || code.length === 10)) {
      detectedIsbn.textContent = code;
      barcodeResult.style.display = 'block';
      barcodeError.style.display = 'none';

      // æ¤œç´¢ãƒ•ã‚©ãƒ¼ãƒ ã«è‡ªå‹•å…¥åŠ›
      searchInput.value = code;


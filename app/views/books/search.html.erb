<div class="container">
  <div class="header">
    <h1>本を検索</h1>
    <div class="header-actions">
      <%= link_to "My Books", books_path, class: "btn btn-secondary" %>
      <%= link_to "Add Book Manually", new_book_path, class: "btn btn-outline-primary" %>
    </div>
  </div>

  <div class="search-form">
    <%= form_with url: search_books_path, method: :get, local: true, class: "search-form-inner" do |form| %>
      <%= form.label :query, "タイトル・ISBN" %>
      <%= form.text_field :query, value: @query, placeholder: "本のタイトルまたはISBNを入力", class: "search-input" %>
      <%= form.submit "検索", class: "btn btn-primary" %>
    <% end %>
  </div>

  <% if @query.present? %>
    <div class="search-info">
      <p><strong>"<%= @query %>"の検索結果: <%= @search_results.length %>件</strong></p>
    </div>

    <% if @search_results.any? %>
      <div class="search-results">
        <% @search_results.each_with_index do |book_data, index| %>
          <div class="search-result-item">
            <div class="book-image">
              <% if book_data[:image_url].present? %>
                <img src="<%= book_data[:image_url] %>" alt="<%= book_data[:title] %>" class="book-cover">
              <% else %>
                <div class="no-image">No Image</div>
              <% end %>
            </div>

            <div class="book-info">
              <h3><%= book_data[:title] %></h3>
              
              <% if book_data[:author].present? %>
                <p class="author"><strong>Author:</strong> <%= book_data[:author] %></p>
              <% end %>
              
              <% if book_data[:publisher].present? %>
                <p class="publisher"><strong>Publisher:</strong> <%= book_data[:publisher] %></p>
              <% end %>
              
              <% if book_data[:published_date].present? %>
                <p class="published-date"><strong>Published:</strong> <%= book_data[:published_date] %></p>
              <% end %>
              
              <% if book_data[:isbn_13] || book_data[:isbn_10] %>
                <p class="isbn">
                  <strong>ISBN:</strong> 
                  <%= book_data[:isbn_13] || book_data[:isbn_10] %>
                </p>
              <% end %>
              
              <% if book_data[:description].present? %>
                <div class="description">
                  <strong>Description:</strong>
                  <p class="description-text">
                    <%= truncate(book_data[:description], length: 200) %>
                  </p>
                </div>
              <% end %>
            </div>

            <div class="book-actions">
              <%= link_to "Add This Book", new_from_google_books_books_path(
                    google_books_id: book_data[:google_books_id],
                    title: book_data[:title],
                    author: book_data[:author],
                    publisher: book_data[:publisher],
                    published_date: book_data[:published_date],
                    description: book_data[:description],
                    isbn_10: book_data[:isbn_10],
                    isbn_13: book_data[:isbn_13],
                    image_url: book_data[:image_url]
                  ), class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="no-results">
        <h3>検索結果が見つかりませんでした</h3>
        <p>別のタイトルやキーワードで検索してみてください。</p>
      </div>
    <% end %>
  <% end %>
</div>


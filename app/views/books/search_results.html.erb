<div class="container">
  <div class="header">
    <h1>Search Results for "<%= @query %>"</h1>
    <div class="header-actions">
      <%= link_to "Back to Books", books_path, class: "btn btn-secondary" %>
      <%= link_to "Add Book Manually", new_book_path, class: "btn btn-outline-primary" %>
    </div>
  </div>

  <div class="search-info">
    <p><strong><%= @search_results.length %> books found</strong></p>
  </div>

  <% if @search_results.any? %>
    <div class="search-results">
      <% @search_results.each_with_index do |book_data, index| %>
        <div class="search-result-item">
          <div class="book-image">
            <% if book_data[:image_url].present? %>
              <img src="<%= book_data[:image_url] %>" alt="<%= book_data[:title] %>" class="book-cover">
            <% else %>
              <div class="no-image">No Image</div>
            <% end %>
          </div>

          <div class="book-info">
            <h3><%= book_data[:title] %></h3>
            
            <% if book_data[:author].present? %>
              <p class="author"><strong>Author:</strong> <%= book_data[:author] %></p>
            <% end %>
            
            <% if book_data[:publisher].present? %>
              <p class="publisher"><strong>Publisher:</strong> <%= book_data[:publisher] %></p>
            <% end %>
            
            <% if book_data[:published_date].present? %>
              <p class="published-date"><strong>Published:</strong> <%= book_data[:published_date] %></p>
            <% end %>
            
            <% if book_data[:isbn_13] || book_data[:isbn_10] %>
              <p class="isbn">
                <strong>ISBN:</strong> 
                <%= book_data[:isbn_13] || book_data[:isbn_10] %>
              </p>
            <% end %>
            
            <% if book_data[:page_count] %>
              <p class="page-count"><strong>Pages:</strong> <%= book_data[:page_count] %></p>
            <% end %>
            
            <% if book_data[:language] %>
              <p class="language"><strong>Language:</strong> <%= book_data[:language].upcase %></p>
            <% end %>
            
            <% if book_data[:categories].present? %>
              <p class="categories"><strong>Categories:</strong> <%= book_data[:categories] %></p>
            <% end %>
            
            <% if book_data[:description].present? %>
              <div class="description">
                <strong>Description:</strong>
                <p class="description-text">
                  <%= truncate(book_data[:description], length: 200) %>
                </p>
              </div>
            <% end %>
          </div>

          <div class="book-actions">
            <%= form_with url: create_from_google_books_books_path, method: :post, local: true, class: "add-book-form" do |form| %>
              <%= form.hidden_field :google_books_id, value: book_data[:google_books_id] %>
              <%= form.hidden_field :title, value: book_data[:title] %>
              <%= form.hidden_field :author, value: book_data[:author] %>
              <%= form.hidden_field :publisher, value: book_data[:publisher] %>
              <%= form.hidden_field :published_date, value: book_data[:published_date] %>
              <%= form.hidden_field :description, value: book_data[:description] %>
              <%= form.hidden_field :isbn_10, value: book_data[:isbn_10] %>
              <%= form.hidden_field :isbn_13, value: book_data[:isbn_13] %>
              <%= form.hidden_field :image_url, value: book_data[:image_url] %>
              
              <%= form.submit "Add This Book", class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="no-results">
      <h3>No books found</h3>
      <p>Try searching with a different title or keywords.</p>
      <%= link_to "Try another search", books_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

